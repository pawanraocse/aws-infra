# Global project environment variables
PROJECT_NAME=cloud-infra
AWS_PROFILE=default
PARAM_REGION="us-east-1"  # central region for all config
ENVIRONMENT=dev

# AWS Credentials for Docker containers
AWS_ACCESS_KEY_ID=<your-aws-access-key-id>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-access-key>
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1


# ============================================================================
# Database
# ============================================================================
POSTGRES_DB=cloudinfra
DUMMY_POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# ============================================================================
# Redis
# ============================================================================
REDIS_PORT=6379

# ============================================================================
# OpenFGA
# ============================================================================
OPENFGA_DB=openfga
OPENFGA_PLAYGROUND_ENABLED=true

# ============================================================================
# Eureka
# ============================================================================
EUREKA_URL=http://eureka-server:8761/eureka/

# ============================================================================
# Service Ports
# ============================================================================
GATEWAY_PORT=8080
AUTH_PORT=8081
BACKEND_PORT=8082
PLATFORM_PORT=8083
PAYMENT_PORT=8088


# ============================================================================
# Stripe
# ============================================================================

STRIPE_API_KEY=<your-stripe-api-key>
STRIPE_WEBHOOK_SECRET=<your-stripe-webhook-secret>

# Price IDs (in order: Starter, Pro, Enterprise)
STRIPE_PRICE_STARTER=<price_id_starter>
STRIPE_PRICE_PRO=<price_id_pro>
STRIPE_PRICE_ENTERPRISE=<price_id_enterprise>
STRIPE_SUCCESS_URL=http://localhost:4200/app/settings/billing?success=true
STRIPE_CANCEL_URL=http://localhost:4200/app/settings/billing?canceled=true

# ============================================================================
# Razorpay
# ============================================================================
PAYMENT_PROVIDER=razorpay
RAZORPAY_KEY_ID=<your-razorpay-key-id>
RAZORPAY_KEY_SECRET=<your-razorpay-key-secret>
RAZORPAY_WEBHOOK_SECRET=<your-razorpay-webhook-secret>
RAZORPAY_PLAN_STARTER=<plan_id_starter>
RAZORPAY_PLAN_PRO=<plan_id_pro>
RAZORPAY_PLAN_ENTERPRISE=<plan_id_enterprise>




# ============================================================================
# Email
# ============================================================================
SES_FROM_EMAIL=noreply@example.com

# ============================================================================
# Feature Flags
# ============================================================================
BILLING_ENABLED=false
AUTH_PROFILE=

# ============================================================================
# Identity Providers (Social Login)
# ============================================================================
GOOGLE_CLIENT_ID=<your-google-client-id>
GOOGLE_CLIENT_SECRET=<your-google-client-secret>
